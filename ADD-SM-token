ethereum.request({
  method: 'wallet_watchAsset',
  params: {
    type: 'BPE20',
    options: {
      address: '0x119f095a45df2a77337042bcc4f2e52fA6e7e881',
      symbol: 'SM',
      decimals: 18,
      image: 'http://www.smcoin.info/assets/icon.png',
    },
  },
});
  .then((success) => {d
    if (success) {
      console.log('SM successfully added to wallet!')
    } else {
      throw new Error('Something went wrong.')
    }
  })
  .catch(console.error)
